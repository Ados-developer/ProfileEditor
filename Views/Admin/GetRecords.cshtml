@model List<UserModel>
<h1>List of Users</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="notification-succes">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="notification-error">
        @TempData["ErrorMessage"]
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <th>
                    <button type="button" class="btn btn-sm btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-userid="@user.Id"
                            data-username="@user.UserName">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </th>
                <th class="d-none">@user.Id</th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="modalUserId" name="id" />
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong id="modalUserName"></strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // tlačidlo, ktoré modal otvorilo, kvoli userID a Username
        var userId = button.getAttribute('data-userid');
        var userName = button.getAttribute('data-username');

        // nastav hodnoty do hidden inputu a modal textu
        deleteModal.querySelector('#modalUserId').value = userId;
        deleteModal.querySelector('#modalUserName').textContent = userName;
    });
</script>