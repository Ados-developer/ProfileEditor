@model UserModel
@{
    ViewData["Title"] = "Delete Account";
}
<div class="login-area">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title text-center">
                <div class="section-sub-title">
                    <h4>Delete Account</h4>
                </div>
                <div class="em_bar_bg"></div>
                <div class="section-main-title">
                    <h1>Delete Account</h1>
                </div>
            </div>
        </div>
    </div>
    <p class="text-center">Are you sure you want to delete your account @Model.UserName?</p>
    <p class="text-center">This action cannot be undone.</p>

    <form asp-action="Delete" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="buttons-div">
            <div class="form-button">
                <button type="submit" class="danger-button">Yes, delete my account</button>
            </div>

            <div class="hero-button">
                <a asp-action="Profile" asp-controller="Profile">Cancel</a>
            </div>
        </div>  
    </form>
</div>


